<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#9BAAB1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="詳細加工數據"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- 數據項目顯示 -->
        <!-- 完工圖片顯示 -->

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            tools:layout_editor_absoluteX="-16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/door_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="門框橫料：" />

                <TextView
                    android:id="@+id/door_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="門框高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/door_piece_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="門片橫料：" />

                <TextView
                    android:id="@+id/door_piece_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="門片高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/glass_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="玻璃寬：" />

                <TextView
                    android:id="@+id/glass_lengthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="玻璃高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/glass_second_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="三拉第二玻璃寬度：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/top_flower_net_thing_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="上花格網料寬：" />

                <TextView
                    android:id="@+id/top_flower_net_thing_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="上花格網料高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/top_flower_net_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="上花格網寬：" />

                <TextView
                    android:id="@+id/top_flower_net_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="上花格網高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mid_flower_net_thing_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="中花格網料高：" />

                <TextView
                    android:id="@+id/mid_flower_net_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="中花格網高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bottom_flower_board_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="下花板寬：" />

                <TextView
                    android:id="@+id/bottom_flower_board_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="下花板高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flower_board_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="花板寬：" />

                <TextView
                    android:id="@+id/flower_board_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="花板高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flower_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="門花寬：" />

                <TextView
                    android:id="@+id/flower_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="門花高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leaf_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="百葉寬：" />

                <TextView
                    android:id="@+id/leaf_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="百葉高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leaf_numberTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="葉片數量：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/window_horiTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="窗戶橫料：" />

                <TextView
                    android:id="@+id/out_window_horiTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="外片窗戶橫料：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/screen_window_horiTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="紗窗橫料：" />

                <TextView
                    android:id="@+id/screen_window_branchTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="紗窗站支：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inter_branchTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="內片站支：" />

                <TextView
                    android:id="@+id/exter_branchTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="外片站支：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bottom_line_1TextView"
                    style="@style/CustomTextViewStyle"
                    android:text="下台畫線：" />

                <TextView
                    android:id="@+id/left_lineTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="內左量起畫線：" />

                <TextView
                    android:id="@+id/inner_lineTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="內片大勾：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bottom_line_2TextView"
                    style="@style/CustomTextViewStyle"
                    android:text="下台畫線2：" />

                <TextView
                    android:id="@+id/screen_window_midTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="紗窗中腰：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flower_grid_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="花格料寬：" />

                <TextView
                    android:id="@+id/flower_grid_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="花格料高：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flower_net_widthTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="花格網寬：" />

                <TextView
                    android:id="@+id/flower_net_heightTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="花格網高：" />
            </LinearLayout>
        </LinearLayout>

        <!-- 頁面導航區 -->
        <LinearLayout
            android:id="@+id/completedImageLayout"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="4dp"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/middle">

            <TextView
                android:id="@+id/completedImageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="完工圖片"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/completedImageView"
                style="@style/CustomTextViewStyle"
                android:layout_width="355dp"
                android:layout_height="200dp"
                android:contentDescription="完工圖片"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/uploadImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#a78989"
                android:text="上傳圖片"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
        android:id="@+id/navigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/completedImageLayout">

        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#F5F5F5"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_previous"
            android:contentDescription="Previous" />

        <TextView
            android:id="@+id/pageNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 10"
            android:textSize="18sp"
            android:layout_marginHorizontal="16dp" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:background="#F5F5F5"
            android:src="@drawable/ic_next"
            android:contentDescription="Next" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/navigationLayout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</android.widget.ScrollView>

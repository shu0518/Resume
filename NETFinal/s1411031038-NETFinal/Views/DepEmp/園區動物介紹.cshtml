@model s1411031038_NETFinal.ViewModels.DepEmpViewModel

@{
    ViewBag.Title = "園區動物介紹";
    Layout = "~/Views/Shared/_Layout Final.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h3>
                分類>>
                @if (!Model.depList.Count.Equals(0))
                {
                    foreach (var item in Model.depList)
                    {
                        @Html.ActionLink(item.DepName, "園區動物介紹", new { depid = item.DepId })
                    }
                }
                else
                {
                    <p>查無資料</p>
                }

            </h3>
            </div>
        </div>

        <div class="container">
            @if (!Model.empList.Count.Equals(0))
            {
                foreach (var item in Model.empList)
                {
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <img src="@Url.Content("~/images/"+item.EmpImg)">
                            <div class="caption">
                                <h3>@item.EmpName</h3>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>




@model s1411031038_NETFinal.Models.Employee

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout Final.cshtml";
}
<div class="container">
    <h3> 新增動物</h3>
    @* 建立新增資料所須的表單*@
    @using (Html.BeginForm("Create", "DepEmp", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label for="DepId" class="control-label col-sm-2"> 物種 </label>
                <div class="col-sm-10">
                    <select id="DepId" name="DepId" class="form-control">
                        @foreach (var item in ViewBag.depList)
                        {
                            if (ViewBag.dId == item.DepId)
                            {
                                <option value="@item.DepId" selected="selected">@item.DepName</option>
                            }
                            else
                            {
                                <option value="@item.DepId">@item.DepName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="DepId" class="control-label col-sm-2"> 動物編號 </label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.EmpId)
                    @Html.ValidationMessageFor(model => model.EmpId)
                </div>
            </div>
            <div class="form-group">
                <label for="DepId" class="control-label col-sm-2"> 動物姓名 </label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.EmpName)
                    @Html.ValidationMessageFor(model => model.EmpName)
                </div>
            </div>
            <div class="form-group">
                <label for="DepId" class="control-label col-sm-2">動物照片</label>
                <div class="col-sm-10">
                        <input type="file" name="upload" id="file" accept="images/*" class="form-control-file">
                        <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value=" 新增動物" />
                </div>
            </div>
        </div>
    }
</div>



<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#9BAAB1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="詳細加工數據"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- 數據項目顯示 -->
    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/materialTextView"
                style="@style/CustomTextViewStyle"
                android:text="編號：" />
            <TextView
                android:id="@+id/windowMaterialTextView"
                style="@style/CustomTextViewStyle"
                android:text="窗戶材料：" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/innerSupportTextView"
                style="@style/CustomTextViewStyle"
                android:text="內片支撐：" />

            <TextView
                android:id="@+id/outerSupportTextView"
                style="@style/CustomTextViewStyle"
                android:text="外片支撐：" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/screenWidthTextView"
                style="@style/CustomTextViewStyle"
                android:text="紗窗寬度：" />

            <TextView
                android:id="@+id/screenHeightTextView"
                style="@style/CustomTextViewStyle"
                android:text="紗窗高度：" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/glassWidthTextView"
                style="@style/CustomTextViewStyle"
                android:text="玻璃寬度：" />

            <TextView
                android:id="@+id/glassHeightTextView"
                style="@style/CustomTextViewStyle"
                android:text="玻璃高度：" />
        </LinearLayout>

    </LinearLayout>

    <!-- 完工圖片顯示 -->
    <LinearLayout
        android:id="@+id/completedImageLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/completedImageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="完工圖片"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/completedImageView"
            style="@style/CustomTextViewStyle"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:contentDescription="完工圖片"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上傳圖片"
            android:textColor="#FFFFFF"
            android:backgroundTint="#a78989"
            android:layout_gravity="center" />

    </LinearLayout>
    <!-- 頁面導航區 -->
    <LinearLayout
        android:id="@+id/navigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/completedImageLayout">

        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_previous"
            android:contentDescription="Previous" />

        <TextView
            android:id="@+id/pageNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 10"
            android:textSize="18sp"
            android:layout_marginHorizontal="16dp" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next"
            android:contentDescription="Next" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
